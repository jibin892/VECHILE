<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="30dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cc"
    android:orientation="vertical"

android:background="@drawable/aa">


  <EditText
      android:id="@+id/nm"
      android:layout_width="179dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="117dp"
      android:layout_marginTop="50dp"
      android:ems="10"
      android:inputType="text"
      android:hint="Name" />

  <EditText
      android:id="@+id/po"
      android:layout_width="182dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="117dp"
      android:layout_marginTop="20dp"
      android:ems="10"
      android:inputType="phone"
      android:maxLength="10"
      android:hint="Phone number" />

  <EditText
      android:id="@+id/date"
      android:layout_width="186dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="117dp"
      android:layout_marginTop="20dp"
      android:ems="10"
      android:focusable="false"
      android:inputType="date"
      android:hint="Date"
      android:windowSoftInputMode="stateAlwaysHidden" />

  <TextView
      android:id="@+id/textView18"
      android:layout_width="230dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="95dp"
      android:layout_marginTop="20dp"
      android:text="Vechil Type" />

  <Spinner
      android:id="@+id/vechile"
      android:layout_width="233dp"
      android:layout_height="56dp"
      android:layout_marginLeft="95dp"
      android:layout_marginTop="20dp"
      android:hint="Name"
      android:paddingLeft="16dp"
      android:paddingTop="8dp"
      android:paddingRight="16dp"
      android:paddingBottom="8dp"
      android:textColor="@color/white"
      android:textColorHint="@color/white"
      android:textSize="20sp"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/textView19"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="95dp"
      android:layout_marginTop="20dp"
      android:text="No of Members" />

  <Spinner
      android:id="@+id/noofpe"
      android:layout_width="231dp"
      android:layout_height="54dp"
      android:layout_marginLeft="95dp"
      android:layout_marginTop="19dp"
      android:focusable="false"
      android:hint="Date"
      android:inputType="date"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:paddingBottom="8dp"
      android:textColor="@color/white"
      android:textColorHint="@color/white"
      android:textSize="16sp"
      android:windowSoftInputMode="stateAlwaysHidden" />

  <TextView
      android:id="@+id/textView20"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="95dp"
      android:layout_marginTop="20dp"
      android:text="Tour Type" />

  <Spinner
      android:id="@+id/ttour"
      android:layout_width="232dp"
      android:layout_height="46dp"
      android:layout_marginLeft="95dp"
      android:layout_marginTop="19dp"
      android:hint="Phone Number"
      android:inputType="phone"
      android:maxLength="10"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:paddingBottom="8dp"
      android:textColor="@color/white"
      android:textColorHint="@color/white"
      android:textSize="16sp" />

  <TextView
      android:id="@+id/textView21"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="95dp"
      android:layout_marginTop="20dp"
      android:text="Packeges" />

  <Spinner
      android:id="@+id/packeg"
      android:layout_width="233dp"
      android:layout_height="45dp"
      android:layout_marginLeft="95dp"
      android:layout_marginTop="19dp"
      android:hint="Experiance"
      android:paddingLeft="16dp"
      android:paddingTop="8dp"
      android:paddingRight="16dp"
      android:paddingBottom="8dp"
      android:textColor="@color/white"
      android:textColorHint="@color/white"
      android:textSize="16sp" />

  <Button
      android:id="@+id/exp_btn"
      android:layout_width="wrap_content"
      android:layout_height="40dp"

      android:layout_marginLeft="155dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/btn"
      android:onClick="logout"
      android:padding="4dp"
      android:text="PAYE NOW"
      android:textAllCaps="false"
      android:textColor="@color/black"
      android:textSize="16sp" />


</LinearLayout>
</ScrollView>